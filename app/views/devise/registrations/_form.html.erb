							<option value="AM" <%if (!logradouro.blank? && logradouro.bairro.cidade.uf.sigla=="AM")%>selected="selected"<%end%>>AM</option>
							<option value="AP" <%if (!logradouro.blank? && logradouro.bairro.cidade.uf.sigla=="AP")%>selected="selected"<%end%>>AP</option>
