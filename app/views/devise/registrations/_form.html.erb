							<option value="CE" <%if (!logradouro.blank? && logradouro.bairro.cidade.uf.sigla=="CE")%>selected="selected"<%end%>>CE</option>
							<option value="DF" <%if (!logradouro.blank? && logradouro.bairro.cidade.uf.sigla=="DF")%>selected="selected"<%end%>>DF</option>
