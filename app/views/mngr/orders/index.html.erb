<% @orders.each do |order| %>
  <tr>
    <td><%= order.number %></td>
		<td><%= order.order_status.status%></td>
		<td><%= order.totalItems %></td>
		<td><%= order.totalShipping %></td>
		<td><%= order.totalOrder %></td>
		<td><%= order.created_at %></td>
		<td><%= order.shipping_type %></td>
		<td><%= order.payment_type %></td>
    <td><%= link_to 'Show', [:mngr, order] %></td>
    <td><%= link_to 'Edit', edit_mngr_order_path(order) %></td>
    <td><%= link_to 'Destroy', [:mngr, order], :confirm => 'Are you sure?', :method => :delete %></td>
